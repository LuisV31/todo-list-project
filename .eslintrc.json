{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "no-console": "off",
    "no-alert": "off",
    "no-restricted-globals": ["error", "isFinite", "isNaN"],
    "class-methods-use-this": "off",
    "default-case": "off",
    "no-param-reassign": "off",
    "no-case-declarations": "off",
    "func-names": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
